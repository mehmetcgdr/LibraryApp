@using LibraryApp.UI.Models;
@model BookAddViewModel
<h1 class="display-6 mt-2">Yeni Kitap Ekle</h1>
<hr />

<form class="d-flex justify-content-center"
      asp-controller="Home"
      asp-action="Create"
      method="post"
      enctype="multipart/form-data">
    <div class="col-4">
      
            <div class="row ">
                <div class="col text-white">
                    <div class="mb-3 ">
                        <label class="form-label"  asp-for="Name">Kitap Adı</label>
                        <input class="form-control" asp-for="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Author">Yazarı</label>
                        <input class="form-control" asp-for="Author">
                        <span class="text-danger" asp-validation-for="Author"></span>
                    </div>

                </div>
                    <div class="mb-3">
                        <input type="file" asp-for="Image" class="form-control" accept="image/"  />
                        <span class="text-danger" asp-validation-for="Image"></span>
                    </div>
                </div>
           
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>

    

</form>
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}

